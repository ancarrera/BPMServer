extends layout

block navbar
   a.navbar-brand(href="/") BPM Server
   div(class="collapse navbar-collapse")
         ul(class="nav navbar-nav")
            li
               a(href="/logout") Logout
block content
   div(class="container theme-showcase")
      div(class="alert alert-success")
         p #[strong #{user.name} : ] New notification!!
      div(class="jumbotron")
          div(class="row")
            div(class="col-lg-12")
               h1 Your health state
               p #{message}
      a.btn.btn-primary(style='margin-top:20px',href="/users/#{user._id}/measurements") Back